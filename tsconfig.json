{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["es2023"],
    "typeRoots": ["./node_modules/@types", "./src/@types"],

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    "module": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
